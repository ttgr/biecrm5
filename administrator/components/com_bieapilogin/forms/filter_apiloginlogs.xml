<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" description="COM_BIEAPILOGIN_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_BIEAPILOGIN_FILTER_STATE"
               description="COM_BIEAPILOGIN_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        

    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_BIEAPILOGIN_LIST_FULL_ORDERING"
               description="COM_BIEAPILOGIN_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">COM_BIEAPILOGIN_ID_ASC</option><option value="a.id DESC">COM_BIEAPILOGIN_ID_DESC</option><option value="a.userid ASC">COM_BIEAPILOGIN_USERID_ASC</option><option value="a.userid DESC">COM_BIEAPILOGIN_USERID_DESC</option><option value="a.username ASC">COM_BIEAPILOGIN_USERNAME_ASC</option><option value="a.username DESC">COM_BIEAPILOGIN_USERNAME_DESC</option><option value="a.mail ASC">COM_BIEAPILOGIN_MAIL_ASC</option><option value="a.mail DESC">COM_BIEAPILOGIN_MAIL_DESC</option><option value="a.date ASC">COM_BIEAPILOGIN_DATE_ASC</option><option value="a.date DESC">COM_BIEAPILOGIN_DATE_DESC</option><option value="a.token ASC">COM_BIEAPILOGIN_TOKEN_ASC</option><option value="a.token DESC">COM_BIEAPILOGIN_TOKEN_DESC</option>

        </field>

       <field name="limit"
               type="limitbox"
               label="COM_BIEAPILOGIN_LIST_LIMIT"
               description="COM_BIEAPILOGIN_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>